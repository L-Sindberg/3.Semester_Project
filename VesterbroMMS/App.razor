<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(BasePages)" />
        </Found>
        <NotFound>

            <LayoutView Layout="@typeof(NoNavbarLayout)">
                <p>Sorry, there's nothing at this address. You can click here <a href="/">Login page</a> to return to the Login page. </p>
            </LayoutView>

        </NotFound>
    </Router>
</CascadingAuthenticationState>
